{
  "env": {
    "browser": true,
    "commonjs": true,
    "node": true,
    "es6": true
  },
  "extends": "prettier",
  "plugins": ["prettier"],
  "rules": {
    "no-duplicate-case": "warn",
    "no-empty": "warn",
    "no-extra-semi": "warn",
    "no-func-assign": "warn",
    "no-irregular-whitespace": "warn",
    "no-unreachable": "error",
    "curly": "warn",
    "dot-notation": "warn",
    "eqeqeq": "warn",
    "no-empty-function": "warn",
    "no-multi-spaces": "warn",
    "no-unused-vars": "warn",
    "camelcase": "warn",
    "indent": ["warn", 2],
    "quotes": ["warn", "double"],
    "semi": ["warn", "always"],
    "prettier/prettier": "warn"
  }
}
